# Database
DATABASE_URL="postgresql://user:password@localhost:5432/kanvas?schema=public"

# NextAuth v5
AUTH_URL="http://localhost:3000"
AUTH_SECRET="generate-strong-secret-here-min-32-chars"

# Scaleway AI Configuration (EU-based, GDPR-compliant)
# All data processing occurs in France, Paris datacenter (fr-par)
SCW_ACCESS_KEY="your-scaleway-access-key"
SCW_SECRET_KEY="your-scaleway-secret-key"
SCW_DEFAULT_ORGANIZATION_ID="your-organization-id"
SCW_DEFAULT_PROJECT_ID="your-project-id"
SCW_REGION="fr-par"

# Scaleway Object Storage (EU-based, GDPR-compliant)
# Used for storing user-uploaded images and files
# Create a bucket at: https://console.scaleway.com/object-storage/buckets
SCALEWAY_ACCESS_KEY="your-scaleway-s3-access-key"
SCALEWAY_SECRET_KEY="your-scaleway-s3-secret-key"
SCALEWAY_BUCKET_NAME="your-bucket-name"
SCALEWAY_REGION="fr-par"

# Email Service Configuration (EU-based, GDPR-compliant)
# Story 3.2: Share invitations and notifications
# Options: 'console' (development), 'aws-ses', 'sendgrid'
EMAIL_SERVICE="console"
EMAIL_FROM_ADDRESS="noreply@edfolio.app"
EMAIL_FROM_NAME="Edfolio"
EMAIL_REPLY_TO="support@edfolio.app"

# AWS SES (EU region) - Recommended for production
# Use eu-west-1 (Ireland) or eu-central-1 (Frankfurt)
AWS_SES_REGION="eu-west-1"
AWS_SES_ACCESS_KEY_ID="your-aws-ses-access-key"
AWS_SES_SECRET_ACCESS_KEY="your-aws-ses-secret"

# SendGrid (EU) - Alternative option
# Ensure EU data center is selected in SendGrid settings
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_EU_REGION="true"

# Public app URL for email links
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Cron Job Security
# Generate a secure random string for production
CRON_SECRET="your-secure-random-32-char-string"